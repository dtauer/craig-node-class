
<% include header %>

<h2>Write a new entry</h2>

<form method="POST" role="form">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Entry Title" required>
    </div>
    <div class="form-group">
        <label for="content">Entry Text</label>
        <textarea class="form-control" name="body" id="body" rows="5" placeholder="Love Express!" required></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Entry" class="btn btn-primary">
    </div>
</form>

<% include footer %>
